<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">

    <Style x:Key="GaugeStyle" TargetType="{x:Type lvc:Gauge}">
        <Setter Property="Uses360Mode" Value="True" />
        <Setter Property="From" Value="0" />
        <Setter Property="Height" Value="75" />
        <Setter Property="Foreground" Value="#FF919191" />
        <Setter Property="FromColor" Value="#FF007ACC" />
        <Setter Property="ToColor" Value="#FF6C2707" />
        <Setter Property="GaugeBackground">
            <Setter.Value>
                <SolidColorBrush Color="#FF007ACC" Opacity="0.1"/>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>